  .gradient {
    background: linear-gradient(180deg, #eeeceb 0%, #e5e8e9 52.18%, #ccd2d8 100%);
  }

  .bg-hero {
    background: url('/public/assets/hero/mobile.png');
  }

  @media (min-width: 768px) {
    .bg-hero {
      background: url('/public/assets/hero/tablet.png');
    }
  }

  @meadia (min-width: 1024px) {
    .bg-hero {
      background: url('/public/assets/hero/desktop.png');
    }
  }

  .bg-image {
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .bg-hero-image {
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }
</style>
