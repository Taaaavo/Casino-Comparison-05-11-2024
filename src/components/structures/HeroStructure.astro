---
interface Props {
  wrapperClasses?: string;
  sectionClasses?: string;
}

const { wrapperClasses, sectionClasses } = Astro.props;
---

<section id={`home-section`} class=`flex rounded-b-[40px] lg:rounded-b-[70px] justify-center hero-section animate-hero ${sectionClasses}`>
  <div
    class={`sm:w-[640px] md:w-10/12 lg:w-[1024px] xl:w-[1280px] 2xl:w-[1400px] flex flex-col pt-[112px] lg:pt-[150px] xl:pt-[80px] w-full px-3 sm:px-6 md:px-8 gap-8 sm:gap-16 md:gap-10 ${wrapperClasses}`}
  >
    <slot />
  </div>
</section>

