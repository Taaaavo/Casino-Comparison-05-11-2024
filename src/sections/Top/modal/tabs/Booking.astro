---
import Back from '../../components/Back';
import BookingButton from './components/booking-tab/BookingButton';
---

<section id="booking-modal" class="block hidden">
  <Back client:load />
  <div class="relative flex items-end">
    <div class="w-full mt-6">
      <h2 class="px-4 py-2 font-semibold text-ellipsis overflow-hidden text-wrap lg:text-[20px] lg:px-7 xl:text-[22px]" id="booking-modal-hotel-name"></h2>
    </div>
  </div>

  <form id="booking-form" action="" class="flex flex-col items-center justify-center gap-6 px-5 lg:px-10">
    <div class="flex justify-evenly lg:justify-between flex-wrap gap-4 py-5 border-b-[1px] border-[#C8553D22] w-full">
      <div class="flex flex-col gap-1 w-full md:w-5/12 xl:w-[30%]">
        <span class="text-sm font-normal sm:text-base">First Name</span>
        <input type="text" name="name" id="name" placeholder="Terry" class="border-[1px] border-[#00000011] rounded-md py-2 px-4 outline-none text-sm sm:text-base w-full" />
      </div>

      <div class="flex flex-col gap-1 w-full md:w-5/12 xl:w-[30%]">
        <span class="text-sm font-normal sm:text-base">Last Name</span>
        <input type="text" name="lastname" id="lastname" placeholder="Colby" class="border-[1px] border-[#00000011] rounded-md py-2 px-4 outline-none text-sm w-full sm:text-base" />
      </div>

      <div class="flex flex-col gap-1 w-full md:w-5/12 xl:w-[30%]">
        <span class="text-sm font-normal sm:text-base">Phone number</span>
        <div class="border-[1px] border-[#00000011] rounded-md px-4 text-sm w-full sm:text-base flex gap-4">
          <div class="flex items-center gap-1">
            <img src="" alt="Your contry flag" class="w-4 h-4 object-contain country-flag" />
            <span class="country-code text-slate-400 text-sm">+44</span>
          </div>
          <input type="tel" name="phone" id="phone" placeholder="+012 32 65 98 74" class="bg-transparent py-2 outline-none pl-2" />
        </div>
      </div>

      <div class="flex flex-col gap-1 w-full md:w-5/12 xl:w-full">
        <span class="text-sm font-normal sm:text-base">E-mail address</span>
        <input type="email" name="email" id="email" placeholder="terry_colby1@mail.com.uk" class="border-[1px] border-[#00000011] rounded-md py-2 px-4 outline-none text-sm sm:text-base" />
      </div>
    </div>

    <div id="booking-client" class="flex justify-evenly lg:justify-between flex-wrap gap-4 pb-5 w-full">
      <div class="flex flex-col gap-1 w-full md:w-5/12 xl:w-full">
        <span class="text-sm font-normal sm:text-base">Destination</span>
        <select name="destination" id="booking-select" class="border-[1px] border-[#00000011] rounded-md py-2 px-4 outline-none text-sm sm:text-base w-full">
          <option value="Les_Ambassadeurs_Club">Les Ambassadeurs Club</option>
          <option value="The_Empire_Casino">The Empire Casino</option>
          <option value="Genting_Casino_Glasgow">Genting Casino</option>
          <option value="Rainbow_Casino_Birmingham">Rainbow Casino</option>
          <option value="Coral_Island_Casino">Coral Island Casino</option>
          <option value="Alea_Casino_Nottingham">Alea Casino</option>
          <option value="Aspers_Casino_Stratford">Aspers Casino</option>
          <option value="Park_Lane_Club_London">Park Lane Club</option>
          <option value="Grosvenor_Casino_Dundee">Grosvenor Casino</option>
          <option value="Admiral_Casino_Ayr">Admiral Casino</option>
        </select>
      </div>

      <div class="flex flex-col gap-1 w-full md:w-5/12 xl:w-[30%]">
        <span class="text-sm font-normal sm:text-base">Guest and Rooms</span>

        <div class="dropdown-container border-[1px] border-[#00000011] rounded-md py-2 pl-4 outline-none text-sm w-full sm:text-base">
          <div class="rounded-md py-0 outline-none text-sm sm:text-base flex items-center justify-between w-full">
            <span id="guestsLabel">Select guests and rooms</span>
            <button id="toggle-button">
              <img
                src="data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHdpZHRoPSIzMCIgaGVpZ2h0PSIzMCIgdmlld0JveD0iMCAwIDI0IDI0Ij48cGF0aCBmaWxsPSIjRDY0NTUwIiBkPSJtNyAxMGw1IDVsNS01eiIvPjwvc3ZnPg=="
                alt="Dropdown icon"
              />
            </button>
          </div>

          <div id="dropdown-section" class="hidden">
            <div class="counter-section">
              <div class="counter">
                <span>Guests</span>
                <button class="decrement">-</button>
                <input type="number" readonly class="counter-input outline-none bg-transparent" name="guests" id="guests" value="1" />
                <button class="increment">+</button>
              </div>
              <div class="counter">
                <span>Rooms</span>
                <button class="decrement">-</button>
                <input type="number" readonly class="counter-input outline-none bg-transparent" id="rooms" value="1" />
                <button class="increment">+</button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="flex flex-col gap-1 w-full md:w-5/12 xl:w-[30%]">
        <span class="text-sm font-normal sm:text-base">Package</span>
        <select name="package" id="package-select" class="border-[1px] border-[#00000011] rounded-md py-[14px] px-4 outline-none text-sm w-full sm:text-base">
          <option value="standard">Standard</option>
          <option value="premium">Premium</option>
          <option value="vip">VIP</option>
        </select>
      </div>

      <div class="flex flex-col gap-1 w-full md:w-5/12 xl:w-[30%]">
        <span class="text-sm font-normal sm:text-base">Dates</span>
        <input
          type="text"
          id="dates"
          name="dates"
          placeholder="2024-09-11 to 2024-09-22"
          class="datepicker-input border-[1px] border-[#00000011] rounded-md py-[10px] px-4 outline-none text-sm w-full sm:text-base"
        />
      </div>

      <div class="flex flex-col gap-1 w-full md:w-5/12 xl:w-[30%]">
        <BookingButton client:load IDForm="booking-form" />
      </div>
    </div>
  </form>

  <section class="bg-black py-6 flex flex-col gap-2 items-center xl:justify-end xl:flex-row 2xl:gap-10">
    <h3 class="text-white font-semibold">Our payments methods</h3>

    <div class="flex flex-wrap gap-5 sm:gap-x-7 justify-center lg:mr-6 px-4 sm:px-6 md:px-10">
      <img src="/public/assets/hotel-cards/modal/mastercard.png" alt="MasterCard logo" title="MasterCard" />
      <img src="/public/assets/hotel-cards/modal/maestro.png" alt="Maestro logo" title="Maestro" />
      <img src="/public/assets/hotel-cards/modal/visa.png" alt="Visa logo" title="Visa" />
      <img src="/public/assets/hotel-cards/modal/americanexpress.png" alt="American Express logo" title="American Express" />
      <img src="/public/assets/hotel-cards/modal/googlepay.png" alt="Google Pay logo" title="Google Pay" />
      <img src="/public/assets/hotel-cards/modal/applepay.png" alt="Apple Pay logo" title="Apple Pay" />
    </div>
  </section>
</section>
