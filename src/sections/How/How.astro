          class="bg-blueStrong w-full lg:w-full lg:max-w-[380px] md:w-[48%] px-3 py-4 text-white rounded-lg text-[20px]/[28px] font-medium md:text-[22px]/[31px] mt-5 hover:scale-95 transition-all duration-200 lg:text-[24px]/[34px]"
