---
interface Props {
  imgSrc: string;
  title: string;
  description: string;
}

const { imgSrc, title, description } = Astro.props;
---

<div class="bg-white md:w-[48%] text-black flex items-center lg:w-[28%] 2xl:w-[18%] text-center p-5 rounded-xl shadow-md flex-col gap-3">
  <img src={imgSrc} alt={title} />
  <h3 class="font-medium text-base sm:text-lg lg:text-xl">{title}</h3>
  <p class="text-sm sm:text-base lg:text-lg font-light">{description}</p>
</div>
